#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    vector<int>arr(n) ;
	    int maxodd=0;
	    int maxeven=0;
	    for(int i=0;i<n;i++){
	        cin>>arr[i];
	    }
	    for(int i=0;i<n;i+=2){
	        maxeven+=arr[i];
	    }
	    for(int i=1;i<n;i+=2){
	        maxodd+=arr[i];
	    }
	    int ans=max(maxodd,maxeven);
	    cout<<ans<<endl;
	}

}
