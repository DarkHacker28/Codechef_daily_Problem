#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t;
    cin>>t;
    while(t--){
        int n;
        int i=1, maxAns = 0, ans = i;
        cin>>n;
        while(n--){
            int d,x;
            cin>>d>>x;
            if(d / x > maxAns){
            ans = i;
             maxAns = d / x;   
            } 
            i++;
        }
        cout<<ans<<endl;
    }
}
