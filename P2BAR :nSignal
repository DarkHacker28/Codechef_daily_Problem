#include <bits/stdc++.h>
using namespace std;

#define fastIO                   \
    ios::sync_with_stdio(false); \
    cin.tie(NULL);               \
    cout.tie(NULL);              \
    cout.precision(numeric_limits<double>::max_digits10);

void solve()
{
    int n;
    cin >> n;
    string s;
    cin >> s;
    int count = 0;
    bool flag = false;
    for(int i=0;i<n;i++){
        if(s[i]=='0'){
            flag = true;
        }
        if(flag && s[i]== '1'){
            count++;
        }
    }
    cout << count << endl;
    
}

int32_t main()
{
    fastIO;

    int t = 1;
    cin >> t;
    while (t--)
    {
        solve();
    }
    return 0;
}
