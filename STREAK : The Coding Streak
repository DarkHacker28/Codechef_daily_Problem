#include <bits/stdc++.h>

using namespace std;
#define f(n) for (int i = 0; i < n; i++)
#define f1(n) for (int i = 1; i < n; i++)
#define fj(n) for (int j = 0; j < n; j++)
#define s(x) sort(x.begin(),x.end());
#define ll long long

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll t;
    cin >> t;
    while (t--) {
        ll n,i;
        cin>>n;
        vector<ll> a(n,0);
        f(n) cin >> a[i];
        ll mx=0,c=0;
        for(int i=0;i<n;i++){
            if(a[i]==0){
                mx=max(mx,c);
                c=0;
            }else{
                c++;
            }
        }
        mx=max(mx,c);
        cout<<mx<<endl;

    }
}
