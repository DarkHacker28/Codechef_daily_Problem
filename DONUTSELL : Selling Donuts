#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;
    while(n--){
        int a,b;
        cin >> a >> b;
        int arr[a],brr[b];
        for(int i=0;i<a;i++){
            cin >> arr[i];
        }
        for(int j=0;j<b;j++){
            cin >> brr[j];
        }
        int cnt=0;
        // cout<<b<<endl;
        for(int k=0;k<b;k++){
            int h=brr[k];
            if(arr[h-1] != 0){
                arr[h-1] -= 1;
                // cout<<h<<" "<<arr[h-1]<<"-";
            }
            else{
                cnt++;
            }
        }
        // cout<<endl;
        cout << cnt << endl;
    }
}
