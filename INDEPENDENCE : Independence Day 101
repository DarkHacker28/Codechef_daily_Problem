#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t;
    cin>>t;
    while(t--){
        int a, b, c;
        cin>>a>>b>>c;
        int max_stripes = max(a,max(b,c));
        if (max_stripes <= (a+b+c-max_stripes+1))
            cout<<"yes"<<endl;
        else
            cout<<"no"<<endl;
        
    }
}
